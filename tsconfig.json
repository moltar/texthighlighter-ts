{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "./lib",
    "lib": [
      "es2019",
      "dom"
    ],
    "strict": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/tests/*"
  ]
}